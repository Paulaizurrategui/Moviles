<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/etNumero1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número 1"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etNumero2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número 2"
        android:minHeight="48dp" />

    <Button android:id="@+id/btnSumar" android:text="Sumar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnRestar" android:text="Restar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnMultiplicar" android:text="Multiplicar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnDividir" android:text="Dividir" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnResto" android:text="Resto %" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvResultado"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
